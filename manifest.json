{
  "manifest_version": 3,
  "name": "Twitter Clean View",
  "version": "1.0.0",
  "description": "定制化显示推特页面，隐藏不需要的元素并美化界面",
  
  "content_scripts": [
    {
      "matches": ["https://x.com/home*", "https://twitter.com/home*"],
      "css": ["styles/content.css"],
      "js": ["scripts/content.js"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "activeTab"
  ],
  
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ]
} 